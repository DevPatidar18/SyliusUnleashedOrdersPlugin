<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <service id="ForgeLabsUk\SyliusUnleashedOrdersPlugin\Controller\GreetingController" autowire="true" autoconfigure="true" public="true" />

        <!-- Command -->
        <service id="forgelabsuk.command.install_plugin_dependencies" class="ForgeLabsUk\SyliusUnleashedOrdersPlugin\Command\InstallPluginDependenciesCommand">
            <tag name="console.command" command="ForgeLabsUk:install-dependencies"/>
        </service>
        <service id="forgelabsuk.sylius_unleashed_orders_plugin.command.run_migrations" class="ForgeLabsUk\SyliusUnleashedOrdersPlugin\Command\RunMigrationsCommand">
            <tag name="console.command" />
        </service>

        <!-- Evenlistener -->
        <service id="forge_labs_uk_sylius_unleashed_orders_plugin.event_listener.plugin_installation_listener" class="ForgeLabsUk\SyliusUnleashedOrdersPlugin\EventListener\PluginInstallationListener">
            <argument>%kernel.project_dir%</argument>
            <tag name="kernel.event_subscriber"/>
        </service>

    </services>
</container>
